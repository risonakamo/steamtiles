{
    "manifest_version":2,
    "name":"steamtile",
    "version":"2.2",
    "description":"expand steam list views",

    "permissions":["https://store.steampowered.com/*"],

    "web_accessible_resources":[
        "steamtile.css"
    ],

    "content_scripts":
    [{
        "matches":["https://store.steampowered.com/*"],
        "js":["steamtile.js"],
        "run_at":"document_end"
    }]
}
